pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                sh '''
                if ["$language" = "ALL"]
                then
                echo "ALL Languages"
                sh ./ALL.sh
                echo "$language"
                echo "hello world"
                ls -la
                '''

            }
        }
    }
}
