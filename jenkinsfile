pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                echo "Choice: ${params.language}"
                sh "ls -la"
                sh "echo your choice is ${params.language}"
                sh "/var/lib/jenkins/workspace/pip1/${params.language}.sh"
                
            } 
        }
    }
}
