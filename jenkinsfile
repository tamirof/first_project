pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                sh """
                echo "your language choice is ${params.language}"
                """
            } 
        }
        stage('Docker build') {
            steps {
                echo "building container"
                
                sh 'cd Docker'
                sh '''
                ls -la
                echo "FROM nginx:alpine\nCOPY ./${params.language}.html /usr/share/nginx/html" > Dockerfile
                cat Dockerfile
                

                '''
            }
        }
    }
}
