pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                sh """
                echo "your language choice is ${params.language}"
                """
            } 
        }
        stage('Docker build') {
            steps {
                echo "building container"
                sh """
                cd Docker
                ls -la
                echo "${params.language}"
                rm Dockerfile
                echo "FROM nginx:alpine" > Dockerfile
                echo 'COPY ./${params.language}.html /usr/share/nginx/html' >> Dockerfile
                cat Dockerfile
                docker build -t hello:v1 .
                pwd
                """
            }
        }
    }
}
