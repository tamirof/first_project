pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                echo "Choice: ${params.language}"
                sh '''
                echo your choice is ${params.languag} 
                '''
            }
            steps {
                sh ' ./${params.languag}.sh '
            }
        }

    }
}
