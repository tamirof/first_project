pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                sh '''
                echo your language choice is ${params.language}
                chmod +x ${params.language}.sh
                /var/lib/jenkins/workspace/pip1/${params.language}.sh
                '''
            } 
        }
    }
}
