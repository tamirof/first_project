pipeline {
    agent any
    parameters {
        choice(name: 'language', choices: ['ALL', 'C', 'JAVA','PYTHON'], description: 'language choice')
    }
    stages {
        stage('build') {
            steps {
                sh """
                echo "your language choice is ${params.language}"
                """
            } 
        }
        stage('Docker build') {
            steps {
                echo "building container"
                sh '''
                cd Docker
                ls -la
                '''
                sh 'echo FROM nginx:alpine; echo COPY ./${params.language}.html /usr/share/nginx/html' > Dockerfile'
                sh 'cat Dockerfile'
            }
        }
    }
}
